@using MyBlogSite.Entities.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayot.cshtml";
}

<h3>Gelen Kutusu</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>       
        <th>Gönderen</th>
        <th>Tarihi</th>
        <th>Mesajı Aç</th>       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd/MMM/yyyy"))</td>
            <td><a href="/Message/MesajDetails/@item.MessageID" class="btn btn-outline-dark">Mesaj Detayı</a></td>
        </tr>
    }
</table>
<br />
<a href="/Message/NewMesajSend/" class="btn btn-outline-success">Yeni Mesaj Ekle</a>

